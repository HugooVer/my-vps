services:
  website_cv:
    image: nginx:alpine
    restart: unless-stopped
    networks:
      - proxy
    volumes:
      - "/opt/website_cv/html:/usr/share/nginx/html"
      - "/opt/website_cv/config:/etc/nginx/conf.d/default.conf:ro"
    labels:
      - "traefik.enable=true"

      - "traefik.http.routers.website_cv.rule=Host(`cv.{{ domain_name }}`)"

      - "traefik.http.routers.entrypoints=websecure"
      - "traefik.http.routers.website_cv.tls.certresolver=myresolver"
networks:
  proxy:
    external: true